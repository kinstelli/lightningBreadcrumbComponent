<aura:component >
	<ltng:require styles="/resource/SLDS0122/assets/styles/salesforce-lightning-design-system-ltng.css"/>
    <aura:attribute name="navSequenceTitles" type="Object[]" default="[]"/>
    <aura:attribute name="curCard" type="String" default="hi hi hi hi hi"/>
    <aura:registerEvent name="pickedBreadcrumb" type="c:CRIT_BreadcrumbSelectionEvent"/>

    <!-- objects here have 'isvisible' and 'title' -->
    <!-- curCard is the card currently being shown. All cards after this card are not clickable -->

    
    <div class="slds">
    	<nav role="navigation">
             <p id="bread-crumb-label" class="slds-assistive-text">You are here:</p>
              <ol class="slds-breadcrumb slds-list--horizontal" aria-labelledby="bread-crumb-label">
                <aura:iteration items="{! v.navSequenceTitles }" var="aPage" >
                 	 <li onclick="{! c.handleClickedCrumb }" class="slds-list__item slds-text-heading--label">
                        <aura:if isTrue="{! aPage.isClickable }">
                            <aura:if isTrue="{! aPage.title == v.curCard }" >
                                <a href="#" class="currentPage"> {! aPage.title } </a>
                            <aura:set attribute="else">
                                <a href="#"> {! aPage.title } </a>
                            </aura:set>
                            </aura:if>
                        <aura:set attribute="else">
                             <a href="#" class="disabledLink" title="{! aPage.title }">
                               {! aPage.title }
                             </a>
                        </aura:set>
                        </aura:if>

                    </li>
                 </aura:iteration>
             </ol>
       </nav>
    </div>
</aura:component>